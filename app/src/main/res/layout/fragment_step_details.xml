<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/video_player"
                android:layout_width="match_parent"
                android:layout_height="@dimen/video_height" />

            <ImageView
                android:id="@+id/step_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/step_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_large_margin"
                android:layout_marginRight="@dimen/app_large_margin"
                android:layout_marginTop="@dimen/app_large_margin"
                android:textSize="@dimen/text_size"
                android:textStyle="italic"
                tools:text="@string/step_desc_text" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
